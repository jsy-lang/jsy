{
  "private": true,
  "dependencies": {
    "jsy-transpile": "file:.."
  },
  "devDependencies": {
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-preset-env": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "mocha": "^5.2.0"
  },
  "babel": {
    "plugins": [
      "offside-js"
    ]
  },
  "config": {
    "oow_unittest_roots": "./scanners",
    "unittest_roots": "./scanners ./unittest"
  },
  "scripts": {
    "pretest:one": "test -d ./node_modules || npm -s install",
    "test": "npm -s run test:one",
    "test:one": "mocha --require babel-core/register $npm_package_config_unittest_roots",
    "test:lean": "TEST_LEAN=true mocha --require babel-core/register $npm_package_config_unittest_roots",
    "test:min": "TEST_LEAN=true mocha --reporter=min --require babel-core/register $npm_package_config_unittest_roots",
    "watch": "chokidar --initial -t 10000 '../cjs/**' $npm_package_config_unittest_roots -c 'npm -s run test:min'"
  }
}
